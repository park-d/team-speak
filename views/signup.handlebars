<form>
    <div>
        <h3>Signup Below!</h3>
    </div>
  <div class="grid-container">
    <div class="grid-x grid-padding-x">
      <div class="medium-6 cell">
        <label for="email-signup">Create your Email
          <input type="text" placeholder=".medium-6.cell" class="form-input" id="email-signup">
        </label>
      </div>
      <div class="medium-6 cell">
        <label for="username-signup">Create your Username
          <input type="text" placeholder=".medium-6.cell" class="form-input" id="username-signup">
        </label>
      </div>
      <div class="medium-6 cell">
        <label for="password-signup">Create your Password
          <input type="password" placeholder=".medium-6.cell" class="form-input" id="password-signup">
        </label>
      </div>
      <button class="submit success button">Signup!</button>
    </div>
  </div>
</form>