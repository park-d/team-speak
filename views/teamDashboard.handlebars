<div class="page-title">
    <div class="bar-wrap">
        <h2>Your Team</h2>
        <div class="top-bar"></div>
    </div>
</div>


<div class="grid-container">
    <div class="grid-x grid-margin-x small-up-1 medium-up-2 large-up-3">
        {{#each posts}}
        <div class="cell">
            <div class="card custom-card">
                <div class="card-section">
                    <h4 class="team-post-title">{{title}}</h4>
                    <p class="team-post-body">{{body}}
                    </p>
                </div>
                <div class="card-footer">
                    <div class="team-post-user">
                        <p>- <a class="form-link" href="/teamDashboard/{{username}}">{{username}}</a>,
                            {{format_date_time updated_at}}</p>
                    </div>
                    <div class="team-post-comments">
                        <div class="comment-container">
                            <div class="bar"></div>
                            <a href="/posts/{{post_id}}" class="form-link">{{commentCount}} Comment(s)</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

